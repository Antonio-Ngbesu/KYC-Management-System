# =============================================================================
# AZURE AI SERVICES CONFIGURATION
# =============================================================================

# Azure AI Foundry - Centralized AI model management and orchestration
AZURE_AI_FOUNDRY_ENDPOINT=https://your-ai-foundry.cognitiveservices.azure.com/
AZURE_AI_FOUNDRY_KEY=your-ai-foundry-key-32-characters-long
AZURE_AI_FOUNDRY_PROJECT_ID=your-foundry-project-id

# Azure Machine Learning - Custom ML models and automated pipelines
AZURE_ML_WORKSPACE_NAME=your-ml-workspace
AZURE_ML_RESOURCE_GROUP=your-resource-group
AZURE_ML_SUBSCRIPTION_ID=your-subscription-id
AZURE_ML_ENDPOINT=https://your-ml-workspace.azureml.net

# Azure AI Document Intelligence (Form Recognizer) - Intelligent document processing
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-form-recognizer.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your-form-recognizer-key-32-characters-long

# Azure AI Vision - Image analysis and OCR capabilities
AZURE_VISION_ENDPOINT=https://your-vision-service.cognitiveservices.azure.com/
AZURE_VISION_KEY=your-vision-service-key-32-characters-long

# Azure AI Language - Natural language processing and entity recognition
AZURE_LANGUAGE_ENDPOINT=https://your-language-service.cognitiveservices.azure.com/
AZURE_LANGUAGE_KEY=your-language-service-key-32-characters-long

# Azure OpenAI Service - Advanced language models for content analysis
AZURE_OPENAI_ENDPOINT=https://your-openai-service.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-key-32-characters-long
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure AI Content Safety - Automated content moderation and compliance
AZURE_CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com/
AZURE_CONTENT_SAFETY_KEY=your-content-safety-key-32-characters-long

# Azure Cognitive Services Multi-Service - Unified access to multiple AI services
AZURE_COGNITIVE_SERVICES_ENDPOINT=https://your-multi-service.cognitiveservices.azure.com/
AZURE_COGNITIVE_SERVICES_KEY=your-multi-service-key-32-characters-long

# Azure Storage - Cloud document storage with AI processing integration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-storage-account-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
AZURE_STORAGE_KYC_DOC_CONTAINER=kyc-documents
AZURE_STORAGE_KYC_PROCESSED_CONTAINER=kyc-processed
AZURE_STORAGE_KYC_ARCHIVES_CONTAINER=kyc-archives

# Azure Monitor - AI-powered system monitoring and alerting
AZURE_MONITOR_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/
AZURE_APPLICATION_INSIGHTS_KEY=your-app-insights-key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://kyc_user:kyc_password@localhost:5432/kyc_database

# SQLite fallback (for development/testing)
SQLITE_DATABASE_PATH=./kyc_database.db

# =============================================================================
# CACHING & SESSION MANAGEMENT
# =============================================================================

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_SECONDS=3600

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Configuration
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30
SESSION_TIMEOUT_MINUTES=60

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Settings
APP_NAME=KYC AI-Powered Management System
APP_VERSION=2.0.0
APP_DESCRIPTION=Intelligent KYC system powered by Azure AI services
DEBUG=False
LOG_LEVEL=INFO
ENVIRONMENT=production

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
UI_PORT_CUSTOMER=8501
UI_PORT_ANALYST=8502
UI_PORT_ADMIN=8503
UI_PORT_LAUNCHER=8520

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Risk Assessment Models
RISK_ASSESSMENT_MODEL_THRESHOLD=0.75
FRAUD_DETECTION_CONFIDENCE_THRESHOLD=0.80
DOCUMENT_AUTHENTICITY_THRESHOLD=0.85

# AI Processing Settings
MAX_DOCUMENT_SIZE_MB=50
SUPPORTED_FILE_TYPES=pdf,jpg,jpeg,png,tiff,bmp
AUTO_PROCESS_DOCUMENTS=true
AI_PROCESSING_TIMEOUT_SECONDS=300

# =============================================================================
# COMPLIANCE & REGULATORY
# =============================================================================

# Compliance Settings
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=3650  # 10 years
PII_REDACTION_ENABLED=true

# Regulatory Reporting
REGULATORY_REPORTING_ENABLED=true
SUSPICIOUS_ACTIVITY_THRESHOLD=0.90